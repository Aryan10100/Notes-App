<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateNotesActivity"
    android:padding="16dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/EditNoteHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:text="@string/edit_note"
        android:textColor="@color/orange"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/UpdateSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/EditNoteHeading"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        android:src="@drawable/done"
        app:tint="@color/orange" />

    <EditText
        android:id="@+id/EditTitleText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/title"
        android:textSize="20sp"
        android:padding="12dp"
        android:layout_below="@id/EditNoteHeading"
        android:background="@drawable/border"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="16dp"
        android:maxLines="1"/>
    <EditText
        android:id="@+id/contentEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/enter_your_note"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_below="@id/EditTitleText"
        android:background="@drawable/border"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="12dp"
        android:gravity="top"/>

</RelativeLayout>